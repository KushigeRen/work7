<h3>検索結果</h3>
<p><strong><%= @rooms.length %></strong>件</p>
<table class="table table-hover table-inverse">
<thead>
<tr>
    <th>イメージ</th>
    <th>名前</th>
    <th>詳細</th>
    <th>料金</th>
    <th>住所</th>
</tr>
</thead>
<tbody>
<% @rooms.each do |room| %>
    <tr>
    <td><%= image_tag room.image if room.image.attached? %></td>
    <td><%= link_to room.name,room_path(room), class: 'room_name' %></td>
    <td><%= room.detail %></td>
    <td><%= room.fee %></td>
    <td><%= room.address %></td>
    <td><%= link_to "詳細", room_path(room) %></td>
    </tr>
<% end %>
</tbody>
</table>